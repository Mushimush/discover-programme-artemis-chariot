// ============ SETUP ============
void setup() {
    Serial.begin(SERIAL_BAUD);
    delay(1000);

    Serial.println("\n\n=================================");
    Serial.println("ESP32-CAM MJPEG Streaming Server");
    Serial.println("=================================\n");

    // Initialize camera
    if (!initCamera()) {
        Serial.println("FATAL: Camera initialization failed!");
        Serial.println("Please check camera connections and reset.");
        while (true) {
            delay(1000);
        }
    }

    // Connect to WiFi
    if (!connectWiFi()) {
        Serial.println("FATAL: WiFi connection failed!");
        Serial.println("Please check credentials and reset.");
        while (true) {
            delay(1000);
        }
    }

    // Start HTTP stream server
    if (!startStreamServer()) {
        Serial.println("FATAL: Stream server failed to start!");
        while (true) {
            delay(1000);
        }
    }

    Serial.println("\n=================================");
    Serial.println("System Ready!");
    Serial.println("=================================");
    Serial.print("Stream at: http://");
    Serial.print(WiFi.localIP());
    Serial.println("/stream");
    Serial.println("Waiting for commands via Serial...\n");
}

// ============ MAIN LOOP ============
void loop() {
    // Check for motor commands from Serial (sent by computer)
    if (Serial.available() > 0) {
        String command = Serial.readStringUntil('\n');
        executeMotorCommand(command);
    }

    // Keep WiFi alive
    if (WiFi.status() != WL_CONNECTED) {
        Serial.println("WiFi disconnected! Reconnecting...");
        connectWiFi();
    }

    delay(10);  // Small delay to prevent watchdog issues
}
